extends ../layout/home-layout
block content
	#galeria
		.row
			.main-banner
		.row.context-row.cemento-bg
			p.text-center.chinese.uppercased Galeria fotográfica
		br
		br
		br
		.row
			h1.indie {{currentEvent.name}}
			h3.indie {{currentEvent.description}}
			h2.indie {{currentEvent.release_date | date: "dd/MM/yyyy"}}
		.row.container-fixed
			.col.col-md-3.clickable(ng-repeat="photo in eventPhotos" ng-click="showSlider(photo)")
				.img(back-img="{{photo.photo_url}}")
			.col(ng-if="thereIsMorePhotos")
				button.indie.load-more(ng-click="loadMorePhotos()") Ver más
		.row
			.main-banner
		.row
			script(type="text/ng-template", id="sliderPhotos")
				include ./slider-photos
