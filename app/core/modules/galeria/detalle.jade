extends ../layout/home-layout
block content
	#galeria
		.row
			.main-banner
		.title-badge
			p.chinese Galeria Fotografica
		br
		br
		br
		.row
			h1.indie {{currentEvent.name}}
			h3.indie 
				small {{currentEvent.description}}
			h2.indie 
				small {{currentEvent.release_date | date: "dd/MM/yyyy"}}
		.row.container-fixed
			.col.col-md-3.clickable(ng-repeat="photo in currentEvent.all_photos" ng-click="openPhoto(photo)")
				.img(back-img="{{photo.photo_url}}")
		.row
			.main-banner

