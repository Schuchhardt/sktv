extends ../layout/home-layout
block content
	.container.bg-white(id="home")
		.row.cemento-bg
			.main-hero
				.main-banner
					iframe.adidas-banner(src="https://ad.doubleclick.net/ddm/adi/N6311.3203393SKTV/B20708726.215105576;sz=1280x140;ord=[timestamp];dc_lat=;dc_rdid=;tag_for_child_directed_treatment=?" marginwidth="0" marginheight="0" hspace="0" vspace="0" frameborder="0" scrolling="no" bordercolor='#000000')

				.featured-container(ng-if="featured" )
					.col.col-md-6.col-md-offset-3
						.img(back-img="{{featured.image_url}}" ui-sref="post({postId: featured.id})").clickable
						.caption
							.title
								h2.chinese {{featured.title}}
								h3.chinese {{featured.subtitle}}
								.share-links
									span
										i.
							.detail
								p.chinese {{featured.intro}}
								a.indie(ui-sref="post({postId: featured.id})") Ver más
			.last-news(ng-show="recent_news_1")
				.row.context-row.cemento-bg
					p.text-center.chinese.title LO ÚLTIMO
				.row.content-row
					.col.col-md-4.clickable(ng-repeat="post in recent_news_1 | orderBy:'-created_at'" ui-sref="post({postId: post.id})")
						.hover-text
							p.chinese {{post.title}}
						.img(back-img="{{post.image_url}}")
			.row.bg-white
				banner(second="true")
			br
			br
			.instagram-feed(ng-if="instagram_feed")
				.row.context-row.cemento-bg
					p.text-center.chinese.title INSTAGRAM
				div.feed-html(ng-bind-html="instagram_feed")
			.last-news.bottom(ng-show="recent_news_2")
				.row.context-row.cemento-bg
					p.text-center.chinese.title DESTACADO
				.row
					.col.col-md-4.clickable(ng-repeat="post in recent_news_2 | orderBy:'-created_at'" ui-sref="post({postId: post.id})")
						.hover-text
							p.chinese {{post.title}}
						.img(back-img="{{post.image_url}}")
			.row.bg-white.m-b-80
				banner
			br
			br
