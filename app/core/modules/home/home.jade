extends ../layout/home-layout
block content
	.container(id="home")
		.row
			.main-hero
				.main-banner
				.featured-container(ng-if="featured")
					.col.col-md-6.col-md-offset-3
						.img(back-img="{{featured.image_url}}")
						.caption
							.title
								h2.chinese {{featured.title}}
								h3.chinese {{featured.subtitle}}
							.detail
								p.chinese {{featured.intro}}
								a.indie Ver mÃ¡s

				.last-news(ng-show="recent_news")
					.row
						.col.col-md-4(ng-repeat="post in recent_news | orderBy:'-created_at'")
							.hover-text
								p.chinese {{post.title}}
							.img(back-img="{{post.image_url}}")
				.instagram-feed(ng-show="instagram_feed")
					div.feed-html(ng-bind-html="instagram_feed")
