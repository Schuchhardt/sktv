extends ../layout/home-layout
block content
	.container.bg-white(id="home")
		.row.cemento-bg
			.main-hero
				video(autoplay muted loop)
					source(src="../../images/sktv/bg.mp4" type="video/mp4")
				.main-banner
					banner(agency="true")
				.featured-container(ng-if="cover" )
					.col.col-md-6.col-md-offset-3
						.img(back-img="{{cover.image_url}}" ui-sref="post({postId: cover.id})").clickable
						.caption
							.title
								h2.chinese {{cover.title}}
								h3.chinese {{cover.subtitle}}
								.share-links
									span
										i.
							.detail
								p.chinese {{cover.intro}}
								a.indie(ui-sref="post({postId: cover.id})") Ver más
			.last-news(ng-show="recent_news")
				.row.context-row.cemento-bg
					p.text-center.chinese.title LO ÚLTIMO
				.row.content-row
					.col.col-md-4.clickable(ng-repeat="post in recent_news | orderBy:'-created_at' | limitTo: 3" ui-sref="post({postId: post.id})")
						.hover-text
							p.chinese {{post.title}}
						.img(back-img="{{post.image_url}}")
			.row.bg-white.banner-bottom
				banner(second="true")
			br
			br
			.instagram-feed(ng-if="instagram_feed" ng-class="{'loaded': iframeLoaded}")
				.row.context-row.cemento-bg
					p.text-center.chinese.title INSTAGRAM
				div.feed-html(ng-bind-html="instagram_feed")
			.last-news.bottom(ng-show="featured")
				.row.context-row.cemento-bg
					p.text-center.chinese.title DESTACADO
				.row
					.col.col-md-4.clickable(ng-repeat="post in featured | orderBy:'-created_at' | limitTo: 3" ui-sref="post({postId: post.id})")
						.hover-text
							p.chinese {{post.title}}
						.img(back-img="{{post.image_url}}")
			.row.bg-white.m-b-80.banner-bottom
				banner
			br
			br
