extends ../layout/home-layout
block content
	#novedades
		.row.main-banner
		.row.cemento-bg
			p.text-center.chinese.title NOVEDADES
		br
		.row.container-fixed(ng-if="allPosts")
			.col.col-md-12.clickable(ng-repeat="post in allPosts" ui-sref="post({postId: post.id})")
				.img(back-img="{{post.image_url}}")
				.text-desc
					p.title.indie
						| {{post.title}}
					p.indie
						| {{post.subtitle}}
					p(ng-bind-html="trust(currentPost.text)")
					p.indie.see-more
						small
							| Ver m√°s...
		.row.main-banner